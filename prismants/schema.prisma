generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  sessions Session[]
  todos    Todo[]
}

model Session {
  id        Int      @id @default(autoincrement())
  startTime DateTime @default(now())
  duration  Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Todo {
  id        Int     @id @default(autoincrement())
  task      String
  completed Boolean @default(false)
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}
